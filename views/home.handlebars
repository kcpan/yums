	<link rel="stylesheet" href="../css/bootstrap.min.css">
	<link rel="stylesheet" href="../css/animate.min.css">
	<link rel="stylesheet" href="../css/font-awesome.min.css">
	<link rel="stylesheet" href="../css/home-style.css">
	<link href='https://fonts.googleapis.com/css?family=Roboto:400,100,300,500,700,900' rel='stylesheet' type='text/css'>
</head>
<body>

  <!-- preloader section -->
  <section class="preloader">
  	<div class="sk-spinner sk-spinner-pulse"></div>
  </section>

  <!-- navigation section -->
  <section class="navbar navbar-default navbar-fixed-top" role="navigation">
  	<div class="container">
  		<div class="navbar-header">
  			<button class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
  				<span class="icon icon-bar"></span>
  				<span class="icon icon-bar"></span>
  				<span class="icon icon-bar"></span>
  			</button>
  			<a href="#" class="navbar-brand">YUMS</a>
  		</div>
  		<div class="collapse navbar-collapse">
  			<ul class="nav navbar-nav navbar-right">
          <li><a href="/profile" >PROFILE</a></li>
          <li><a href="/settings" >SETTINGS</a></li>
					<li><a href="/" >LOGOUT</a></li>
  			</ul>
  		</div>
  	</div>
  </section>

	<section id='profile'>
		<div class='container'>
			<div class='pic col-xs-6'>
				<img src="../images/gordon.jpg" class="img-responsive center-block" alt="profile">
			</div>
			<div class='summary col-xs-6'>
				<h4>Gordon Ramsey</h4>
				Times Used: 9000<br/>
				Friends Online: 0
				Influence: 9000
			</div>
		<div>
	</section>

	<section id='group'>
		<div class='container'>
		<h1>CREATE GROUP:</h1>

		<div class="row">
	        <div class="col-md-6">
	            <div id="custom-search-input">
	                <div class="input-group col-md-12">
	                    <input type="text" class="form-control input-lg" placeholder="Search for friend..." />
	                    <span class="input-group-btn">
	                        <button class="btn btn-info btn-lg" type="button" href="#">
	                            <i class="glyphicon glyphicon-search"></i>
	                        </button>
	                    </span>
	                </div>
	            </div>
	        </div>
		</div>

		<ul class='checks'>
		{{#each friends}}
			<li><label class="checkbox-inline"><input type="checkbox" value="">{{name}}</label></li>
		{{/each}}
		</ul>
		<div class="row">
			<div class='hold col-xs-6'>
			<a href="/random" class="roll smoothScroll btn btn-default rand">RANDOM</a>
			</div>

			<div class='hold col-xs-6'>
			<a href="/vote" class="roll smoothScroll btn btn-default vote">VOTE</a>
			</div>
		</div>
	</section>

  <!-- JAVASCRIPT JS FILES -->
  <script src="../js/jquery.js"></script>
  <script src="../js/bootstrap.min.js"></script>
  <script src="../js/jquery.parallax.js"></script>
  <script src="../js/smoothscroll.js"></script>
  <script src="../js/nivo-lightbox.min.js"></script>
  <script src="../js/wow.min.js"></script>
  <script src="../js/home-script.js"></script>
</body>
</html>
